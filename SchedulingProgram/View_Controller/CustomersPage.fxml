        <Button fx:id="addCustomerButton" layoutX="574.0" layoutY="451.0" mnemonicParsing="false" onAction="#addCustomerButtonClicked" style="-fx-background-color: cccccc;" text="Add a Customer" textFill="#1b6ea4" />
